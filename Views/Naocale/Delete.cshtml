@model WebAppOptika.Models.Naocale

<h1>Naočale - Brisanje</h1>
<h2> Brisanje naocala: @Model.NazivNaocala</h2>
<h3>Jeste li sigurni u brisanje iznad navedenih naočala?</h3>
<div>
    <h4> Naocale </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NazivNaocala)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.NazivNaocala)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MarkaNaocala)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.MarkaNaocala)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cijena)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Cijena)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kategorija)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Kategorija.VrstaNaocala)
        </dd>      
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SlikaUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.SlikaUrl)" alt="@Html.DisplayFor(model => model.NazivNaocala)" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" />
        <a asp-action="Index">Natrag na popis naočala</a>
    </form>
</div>
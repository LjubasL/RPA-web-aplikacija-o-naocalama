@model IEnumerable<Naocale>

    <h> Popis naocala</h 1>
    <p>
        <a asp-action="Create" class="btn btn-success"> Unesi nove naocale</a>
    </p>
    <table class="table table-hover">
    <thead>
        <tr>
            <th scope="col"> @Html.DisplayNameFor(model => model.SlikaUrl)</th>
            <th scope="col"> @Html.DisplayNameFor(model => model.Id)</th>
            <th scope="col"> @Html.DisplayNameFor(model => model.NazivNaocala)</th>
            <th scope="col"> @Html.DisplayNameFor(model => model.MarkaNaocala)</th>
            <th scope="col"> @Html.DisplayNameFor(model => model.Cijena)</th>
            <th scope="col"> @Html.DisplayNameFor(model => model.Kategorija)</th>
           
            <th>Radnje s podacima</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td> <img src="@Html.DisplayFor(modelItem => item.SlikaUrl)" alt="@Html.DisplayFor(modelItem => item.NazivNaocala)"/> </td>
                <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
                <td>@Html.DisplayFor(modelItem => item.NazivNaocala)</td>
                <td>@Html.DisplayFor(modelItem => item.MarkaNaocala)</td>
                <td>@Html.DisplayFor(modelItem => item.Cijena)</td>
                <td>@Html.DisplayFor(modelItem => item.Kategorija.VrstaNaocala)</td>
               <td><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info"> Uredi</a> | <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Obriši</a></td>
                                

            </tr>
        }

       </tbody>
       </table>

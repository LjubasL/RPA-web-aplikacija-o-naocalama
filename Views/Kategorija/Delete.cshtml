@model WebAppOptika.Models.Kategorija

<h1> View HTML stranica - Brisanje</h1>
<h2> Brisanje kategorije: @Model.VrstaNaocala</h2>
<h3>Jeste li sigurni u brisanje iznad navedene kategorije?</h3>
<div>
    <h4> Kategorija </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VrstaNaocala)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.VrstaNaocala)
        </dd>
        
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

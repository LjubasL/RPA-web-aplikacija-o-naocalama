@model IEnumerable<WebAppOptika.Models.Kategorija>

<h> Popis kategorija</h 1>
    <p>
        <a asp-action="Create" class="btn btn-success"> Unesi novu kategoriju</a>
    </p>
    <table class="table table-hover">
    <thead>
        <tr>
            <th scope="col"> @Html.DisplayNameFor(model => model.Id)</th>
            <th scope="col"> @Html.DisplayNameFor(model => model.VrstaNaocala)</th>
          
            <th>Radnje s podacima</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>                
                <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
                <td>@Html.DisplayFor(modelItem => item.VrstaNaocala)</td>
               
               <td><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info"> Uredi</a> | <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Obriši</a></td>
                                

            </tr>
        }

       </tbody>
       </table>